<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DorucovaciSluzba</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DorucovaciSluzba.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.svg"
                         alt="Logo"
                         style="width: 50px; height: 50px; object-fit: contain;"
                         class="me-2" />
                    <span>Kurýr.cz</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--ZÁSILKY - pouze Admin a Podpora  -->
                        @if (User.Identity.IsAuthenticated == true && (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.Podpora))))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-area="Admin" asp-controller="Package" asp-action="Select">Zásilky</a>
                            </li>
                        }

                        <!--UŽIVATELÉ - pouze Admin  -->
                        @if (User.Identity.IsAuthenticated == true && User.IsInRole(nameof(Roles.Admin)))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-area="Admin" asp-controller="User" asp-action="Select">Uživatelé</a>
                            </li>
                        }

                        <!-- Zásilky uživatele - pouze uživatel  -->
                        @if (User.IsInRole(nameof(Roles.Uzivatel)))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-area="Customer" asp-controller="MyPackages" asp-action="Index">
                                    Moje zásilky
                                </a>
                            </li>
                        }

                        <!-- Zásilky kurýra - pouze kurýr  -->
                        @if (User.IsInRole(nameof(Roles.Kuryr)))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-area="Delivery" asp-controller="MyDeliveries" asp-action="Index">
                                    Moje doručení
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                @if (User.Identity?.IsAuthenticated == false)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="Security" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus me-1"></i>Registrace
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="Security" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-lock me-1"></i>Přihlášení
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white fw-semibold d-flex align-items-center"
                               id="navbarDropdown"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false"
                               style="gap: 8px;">
                                <i class="bi bi-person" style="font-size: 1.2rem;"></i>
                                <div style="display: inline-flex; align-items: baseline; gap: 6px;">
                                    <div class="d-flex flex-column" style="line-height: 1.1;">
                                        <span>@User.Identity.Name</span>
                                        <small class="opacity-75" style="font-size: 0.7rem;">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <text>Admin</text>
                                            }
                                            else if (User.IsInRole("Podpora"))
                                            {
                                                <text>Podpora</text>
                                            }
                                            else if (User.IsInRole("Kuryr"))
                                            {
                                                <text>Kurýr</text>
                                            }
                                            else if (User.IsInRole("Uzivatel"))
                                            {
                                                <text>Uživatel</text>
                                            }
                                        </small>
                                    </div>
                                    <i class="fa-solid fa-caret-down" style="font-size: 0.8rem;"></i>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="Security" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-1"></i>Odhlásit se
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary text-white mt-auto">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <h5 class="mb-2">
                        <i class="fas fa-shipping-fast me-2"></i>Doručovací služba
                    </h5>
                    <p class="mb-0">Made by <strong>Michal Dolanský</strong></p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-2">
                        <i class="fas fa-envelope me-2"></i>info@dorucovaci-sluzba.cz
                    </p>
                    <p class="mb-0 small">
                        &copy; 2025 Doručovací služba. Všechna práva vyhrazena.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model ErrorViewModel
@{
    ViewData["Title"] = "Chyba";
    var errorTitle = Model.StatusCode switch
    {
        404 => "Stránka nenalezena",
        403 => "Přístup odepřen",
        500 => "Chyba serveru",
        _ => "Něco se pokazilo"
    };

    var errorDescription = Model.StatusCode switch
    {
        404 => "Stránka, kterou hledáte, neexistuje nebo byla přesunuta.",
        403 => "Nemáte oprávnění pro přístup k této stránce.",
        500 => "Na serveru došlo k chybě. Zkuste to prosím později.",
        _ => "Došlo k neočekávané chybě při zpracování vašeho požadavku."
    };
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-4 text-center">
                <!-- HLAVIČKA -->
                <div class="card-header text-white py-5 rounded-top-4" style="background: linear-gradient(135deg, #D96B5C 0%, #d1574a 100%);">
                    <i class="fas fa-exclamation-triangle fa-4x mb-3"></i>
                    @if (Model.StatusCode.HasValue)
                    {
                        <h1 class="display-1 fw-bold mb-2">@Model.StatusCode</h1>
                    }
                    <h2 class="display-6 fw-bold mb-0">@errorTitle</h2>
                </div>

                <div class="card-body p-5">
                    <p class="text-muted lead mb-4">
                        @errorDescription
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light border rounded-4 mb-4">
                            <small class="text-muted">
                                <strong>ID požadavku:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="d-grid gap-3">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Zpět na hlavní stránku
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Zpět na předchozí stránku
                        </button>
                    </div>
                </div>

                <div class="card-footer bg-light text-center py-4 border-0 rounded-bottom-4">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Pokud problém přetrvává, kontaktujte prosím podporu.
                    </small>
                </div>
            </div>

            <!-- DALŠÍ MOŽNOSTI -->
            <div class="mt-5">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card border-0 shadow rounded-4 h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-search fa-2x text-warning mb-3"></i>
                                <h5 class="fw-bold mb-3">Sledovat zásilku</h5>
                                <p class="text-muted small mb-3">Najděte svou zásilku pomocí čísla</p>
                                <a asp-area="Admin" asp-controller="Package" asp-action="Track" class="btn btn-warning text-white">
                                    Vyhledat
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-0 shadow rounded-4 h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-paper-plane fa-2x text-primary mb-3"></i>
                                <h5 class="fw-bold mb-3">Odeslat zásilku</h5>
                                <p class="text-muted small mb-3">Vytvořte novou zásilku</p>
                                <a asp-area="Admin" asp-controller="Package" asp-action="Create" class="btn btn-primary">
                                    Vytvořit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
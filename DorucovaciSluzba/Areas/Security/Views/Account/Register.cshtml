@model RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-success text-white text-center py-4 rounded-top-4">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Registrace
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Jméno
                                </label>
                                <input asp-for="FirstName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Zadejte jméno" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Příjmení
                                </label>
                                <input asp-for="LastName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Zadejte příjmení" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="fas fa-at me-2"></i>Uživatelské jméno
                            </label>
                            <input asp-for="Username"
                                   type="text"
                                   class="form-control"
                                   placeholder="Zadejte uživatelské jméno" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>E-mail
                            </label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="Zadejte e-mail" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">
                                <i class="fas fa-phone me-2"></i>Telefon (nepovinné)
                            </label>
                            <input asp-for="Phone"
                                   type="tel"
                                   class="form-control"
                                   placeholder="Zadejte telefon" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Heslo
                            </label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control"
                                   placeholder="Zadejte heslo" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RepeatedPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i>Heslo znovu
                            </label>
                            <input asp-for="RepeatedPassword"
                                   type="password"
                                   class="form-control"
                                   placeholder="Zadejte heslo znovu" />
                            <span asp-validation-for="RepeatedPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Registrovat se
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light rounded-bottom-4">
                    <p class="mb-2 text-muted">Již máte účet?</p>
                    <a asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Přihlásit se
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/Validation/FirstLetterCZ.js"></script>
    <script src="~/js/Validation/EmailCZ.js"></script>
    <script src="~/js/Validation/PhoneCZ.js"></script>

}
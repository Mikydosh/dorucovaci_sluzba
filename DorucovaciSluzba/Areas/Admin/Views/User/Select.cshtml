@model IList<DorucovaciSluzba.Infrastructure.Identity.User>
@{
    ViewData["Title"] = "Správa uživatelů";
    var userRoles = ViewBag.UserRoles as Dictionary<int, IList<string>>;

    var currentSort = ViewBag.CurrentSort as string ?? "id";
    var currentOrder = ViewBag.CurrentOrder as string ?? "asc";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
    var roleFilter = ViewBag.RoleFilter as string ?? "";

    string GetSortIcon(string columnName)
    {
        if (currentSort.Equals(columnName, StringComparison.OrdinalIgnoreCase))
        {
            return currentOrder == "asc" ? "↑" : "↓";
        }
        return "";
    }

    string GetNextOrder(string columnName)
    {
        if (currentSort.Equals(columnName, StringComparison.OrdinalIgnoreCase))
        {
            return currentOrder == "asc" ? "desc" : "asc";
        }
        return "asc";
    }
}

<div class="container-fluid">
    <div class="row mt-1">
        <div class="col-12">
            <h1 class="display-6 text-center fw-bold mb-2">
                <i class="fa-solid fa-user-pen text-primary"></i> @ViewData["Title"]
            </h1>

            <!-- ALERT ZPRÁVY -->
            @if (TempData["UserSuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-4 shadow mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Úspěch!</strong> @TempData["UserSuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["UserErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-4 shadow mb-4" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Chyba!</strong> @TempData["UserErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }


            <!-- Vyhledávací formulář -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-action="Select" method="get" class="row g-3 align-items-end mb-1">

                        <!-- FILTR ROLÍ -->
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-user-tag me-1 text-primary"></i>Role
                            </label>
                            <select name="roleFilter" class="form-select form-select-lg" onchange="this.form.submit()">
                                <option value="">Všechny role</option>
                                @if (ViewBag.AvailableRoles != null)
                                {
                                    foreach (var role in ViewBag.AvailableRoles as List<string>)
                                    {
                                        <option value="@role" selected="@(roleFilter == role)">@role</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Vyhledávací pole -->
                        <div class="col-md-7">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-search me-1 text-primary"></i>Vyhledat
                            </label>
                            <input type="text"
                                   name="search"
                                   class="form-control form-control-lg"
                                   placeholder="Vyhledat uživatele..."
                                   value="@currentSearch" />
                        </div>


                        <!-- Zachování řazení -->
                        <input type="hidden" name="sortBy" value="@currentSort" />
                        <input type="hidden" name="sortOrder" value="@currentOrder" />

                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-search me-2"></i>Hledat
                            </button>
                        </div>

                        @if (!string.IsNullOrEmpty(currentSearch))
                        {
                            <div class="col-12">
                                <a asp-action="Select"
                                   asp-route-sortBy="@currentSort"
                                   asp-route-sortOrder="@currentOrder"
                                   class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Zrušit vyhledávání
                                </a>
                            </div>
                        }
                    </form>
                </div>
            </div>

            <!-- Info o filtrování -->
            @if (!string.IsNullOrEmpty(currentSearch))
            {
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-info-circle me-2"></i>
                    <div>
                        Vyhledávání: <strong>@currentSearch</strong> —
                        Nalezeno: <strong>@Model.Count</strong> výsledků
                    </div>
                </div>
            }

            <!-- TABULKA -->
            @if (Model != null && Model.Count > 0)
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <!-- HLAVIČKA TABULKY -->
                                <thead class="table-dark">
                                    <tr>
                                        <th>
                                            <a asp-action="Select"
                                               asp-route-sortBy="Id"
                                               asp-route-sortOrder="@GetNextOrder("Id")"
                                               asp-route-search="@currentSearch"
                                               class="text-white text-decoration-none">
                                                ID @GetSortIcon("Id")
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Select"
                                               asp-route-sortBy="Jmeno"
                                               asp-route-sortOrder="@GetNextOrder("Jmeno")"
                                               asp-route-search="@currentSearch"
                                               class="text-white text-decoration-none">
                                                Jméno @GetSortIcon("Jmeno")
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Select"
                                               asp-route-sortBy="Prijmeni"
                                               asp-route-sortOrder="@GetNextOrder("Prijmeni")"
                                               asp-route-search="@currentSearch"
                                               class="text-white text-decoration-none">
                                                Příjmení @GetSortIcon("Prijmeni")
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Select"
                                               asp-route-sortBy="Email"
                                               asp-route-sortOrder="@GetNextOrder("Email")"
                                               asp-route-search="@currentSearch"
                                               class="text-white text-decoration-none">
                                                E-mail @GetSortIcon("Email")
                                            </a>
                                        </th>
                                        <th>Username</th>
                                        <th>Telefon</th>
                                        <th>Adresa</th>
                                        <th>
                                            <a asp-action="Select"
                                               asp-route-sortBy="Role"
                                               asp-route-sortOrder="@GetNextOrder("Role")"
                                               asp-route-search="@currentSearch"
                                               class="text-white text-decoration-none">
                                                Role @GetSortIcon("Role")
                                            </a>
                                        </th>
                                        <th class="text-center">Akce</th>
                                    </tr>
                                </thead>

                                <!-- TĚLO TABULKY -->
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="align-middle"><strong>@user.Id</strong></td>
                                            <td class="align-middle">@user.FirstName</td>
                                            <td class="align-middle">@user.LastName</td>
                                            <td class="align-middle">
                                                <small>@user.Email</small>
                                            </td>
                                            <td class="align-middle">
                                                <small class="text-muted">@user.UserName</small>
                                            </td>
                                            <td class="align-middle">
                                                @if (!string.IsNullOrEmpty(user.Telefon))
                                                {
                                                    <small>@user.Telefon</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                @if (!string.IsNullOrEmpty(user.Ulice))
                                                {
                                                    <small>
                                                        @user.Ulice @user.CP<br />
                                                        @user.Mesto, @user.Psc
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                @if (userRoles != null && userRoles.ContainsKey(user.Id) && userRoles[user.Id].Any())
                                                {
                                                    foreach (var role in userRoles[user.Id])
                                                    {
                                                        @if (role == "Admin")
                                                        {
                                                            <span class="badge bg-danger">Admin</span>
                                                        }
                                                        else if (role == "Podpora")
                                                        {
                                                            <span class="badge bg-success">Podpora</span>
                                                        }
                                                        else if (@role == "Kuryr")
                                                        {
                                                            <span class="badge bg-primary">Kuryr</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-info">Uzivatel</span>
                                                        }
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Žádná role</span>
                                                }
                                            </td>

                                            <!-- Akce -->
                                            <td class="align-middle text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@user.Id"
                                                       class="btn btn-sm btn-info"
                                                       title="Upravit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete"
                                                       asp-route-id="@user.Id"
                                                       class="btn btn-sm btn-danger"
                                                       onclick="return ConfirmUserPackage();"
                                                       title="Smazat">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Žádní uživatelé nebyli nalezeni.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}
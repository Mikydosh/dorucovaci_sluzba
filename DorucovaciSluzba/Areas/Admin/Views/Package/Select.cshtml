@model IList<Zasilka>
@{
    ViewData["Title"] = "Správa zásilek";
    var users = ViewBag.Users as Dictionary<int, DorucovaciSluzba.Infrastructure.Identity.User>;

    var currentSort = ViewBag.CurrentSort as string ?? "Id";
    var currentOrder = ViewBag.CurrentOrder as string ?? "asc";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";

    string GetSortIcon(string columnName)
    {
        if (currentSort.Equals(columnName, StringComparison.OrdinalIgnoreCase))
        {
            return currentOrder == "asc" ? "↑" : "↓";
        }
        return "";
    }

    string GetNextOrder(string columnName)
    {
        if (currentSort.Equals(columnName, StringComparison.OrdinalIgnoreCase))
        {
            return currentOrder == "asc" ? "desc" : "asc";
        }
        return "asc";
    }
}

<h1>@ViewData["Title"]</h1>

<!-- Vyhledávací formulář -->
<div class="row mb-3 mt-3">
    <div class="col-md-12">
        <form asp-action="Select" method="get" class="d-flex gap-2">
            <input type="text"
                   name="search"
                   class="form-control"
                   placeholder="Vyhledat zásilku..."
                   value="@currentSearch" />

            <!-- Zachování řazení při vyhledávání -->
            <input type="hidden" name="sortBy" value="@currentSort" />
            <input type="hidden" name="sortOrder" value="@currentOrder" />

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i> Hledat
            </button>

            @if (!string.IsNullOrEmpty(currentSearch))
            {
                <a asp-action="Select"
                   asp-route-sortBy="@currentSort"
                   asp-route-sortOrder="@currentOrder"
                   class="btn btn-secondary">
                    <i class="fas fa-times"></i> Zrušit
                </a>
            }
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(currentSearch))
{
    <div class="alert alert-info">
        Vyhledávání: <strong>@currentSearch</strong>
        (@Model.Count výsledků)
    </div>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <!-- ... zbytek tabulky ... -->
        <thead>
            <tr>
                <th>
                    <a asp-action="Select"
                       asp-route-sortBy="Id"
                       asp-route-sortOrder="@GetNextOrder("Id")"
                       asp-route-search="@currentSearch"
                       style="text-decoration: none; color: inherit;">
                        ID @GetSortIcon("Id")
                    </a>
                </th>
                <th>
                    <a asp-action="Select"
                       asp-route-sortBy="Cislo"
                       asp-route-sortOrder="@GetNextOrder("Cislo")"
                       asp-route-search="@currentSearch"
                       style="text-decoration: none; color: inherit;">
                        Číslo zásilky @GetSortIcon("Cislo")
                    </a>
                </th>
                <th>
                    <a asp-action="Select"
                       asp-route-sortBy="Datum"
                       asp-route-sortOrder="@GetNextOrder("Datum")"
                       asp-route-search="@currentSearch"
                       style="text-decoration: none; color: inherit;">
                        Datum odeslání @GetSortIcon("Datum")
                    </a>
                </th>
                <th>Odesílatel</th>
                <th>Příjemce</th>
                <th>Adresa doručení</th>
                <th>
                    <a asp-action="Select"
                       asp-route-sortBy="Kuryr"
                       asp-route-sortOrder="@GetNextOrder("Kuryr")"
                       asp-route-search="@currentSearch"
                       style="text-decoration: none; color: inherit;">
                        Kurýr @GetSortIcon("Kuryr")
                    </a>
                </th>
                <th>
                    <a asp-action="Select"
                       asp-route-sortBy="Stav"
                       asp-route-sortOrder="@GetNextOrder("Stav")"
                       asp-route-search="@currentSearch"
                       style="text-decoration: none; color: inherit;">
                        Stav @GetSortIcon("Stav")
                    </a>
                </th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zasilka in Model)
            {
                var odesilatel = users?.ContainsKey(zasilka.OdesilatelId) == true ? users[zasilka.OdesilatelId] : null;
                var prijemce = users?.ContainsKey(zasilka.PrijemceId) == true ? users[zasilka.PrijemceId] : null;
                var kuryr = zasilka.KuryrId.HasValue && users?.ContainsKey(zasilka.KuryrId.Value) == true ? users[zasilka.KuryrId.Value] : null;

                <tr>
                    <td>@zasilka.Id</td>
                    <td>@zasilka.Cislo</td>
                    <td>@zasilka.DatumOdeslani.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (odesilatel != null)
                        {
                            @($"{odesilatel.FirstName} {odesilatel.LastName} ({odesilatel.Email})")
                        }
                        else
                        {
                            <text>ID: @zasilka.OdesilatelId</text>
                        }
                    </td>
                    <td>
                        @if (prijemce != null)
                        {
                            @($"{prijemce.FirstName} {prijemce.LastName} ({prijemce.Email})")
                        }
                        else
                        {
                            <text>ID: @zasilka.PrijemceId</text>
                        }
                    </td>
                    <td>
                        @zasilka.DestinaceUlice @zasilka.DestinaceCP,
                        @zasilka.DestinaceMesto, @zasilka.DestinacePsc
                    </td>
                    <td>
                        @if (kuryr != null)
                        {
                            @($"{kuryr.FirstName} {kuryr.LastName}")
                        }
                        else if (zasilka.KuryrId.HasValue)
                        {
                            <text>ID: @zasilka.KuryrId</text>
                        }
                        else
                        {
                            <text>—</text>
                        }
                    </td>
                    <td>@zasilka.Stav?.Stav</td>
                    <td>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@zasilka.Id" onclick="return ConfirmDeletePackage();">Smazat</a>
                            <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@zasilka.Id">Upravit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Žádné zásilky nebyly nalezeny.</p>
}

<div class="d-flex gap-2 justify-content-md-end mb-4">
    <a asp-action="Create" class="btn btn-primary btn-lg">Vytvořit zásilku</a>
    <a asp-action="Track" class="btn btn-secondary btn-lg">Vyhledat zásilku</a>
</div>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}
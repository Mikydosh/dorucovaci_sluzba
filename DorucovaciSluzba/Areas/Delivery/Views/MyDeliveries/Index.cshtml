@model IList<DorucovaciSluzba.Domain.Entities.Zasilka>
@inject UserManager<DorucovaciSluzba.Infrastructure.Identity.User> UserManager

@{
    ViewData["Title"] = "Moje doručení";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-truck me-2"></i>Moje doručení
            </h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Momentálně nemáte přiřazené žádné zásilky k doručení.
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Číslo zásilky</th>
                                        <th>Datum odeslání</th>
                                        <th>Stav</th>
                                        <th>Odesílatel</th>
                                        <th>Příjemce</th>
                                        <th>Destinace</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var zasilka in Model)
                                    {
                                        var odesilatel = await UserManager.FindByIdAsync(zasilka.OdesilatelId.ToString());
                                        var prijemce = await UserManager.FindByIdAsync(zasilka.PrijemceId.ToString());

                                        <tr>
                                            <td><strong>@zasilka.Cislo</strong></td>
                                            <td>@zasilka.DatumOdeslani.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <span class="badge bg-primary">@zasilka.Stav?.Stav</span>
                                            </td>
                                            <td>
                                                <strong>@odesilatel?.FirstName @odesilatel?.LastName</strong><br />
                                                <small class="text-muted">@odesilatel?.Email</small>
                                            </td>
                                            <td>
                                                <strong>@prijemce?.FirstName @prijemce?.LastName</strong><br />
                                                <small class="text-muted">@prijemce?.Email</small>
                                            </td>
                                            <td>
                                                <small>
                                                    @zasilka.DestinaceUlice @zasilka.DestinaceCP<br />
                                                    @zasilka.DestinacePsc @zasilka.DestinaceMesto
                                                </small>
                                            </td>
                                            <td>
                                                <a asp-area="Admin"
                                                   asp-controller="Package"
                                                   asp-action="Detail"
                                                   asp-route-id="@zasilka.Id"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Detail
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>